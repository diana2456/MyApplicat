<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.registration.RagisFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pegis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:layout_marginTop="30dp"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="58.4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pegis"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_redis"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="25dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingEnd="11dp"
                android:hint="Email"
                app:layout_constraintStart_toStartOf="parent" />


            <EditText
                android:id="@+id/email_pochta"
                android:layout_width="match_parent"
                android:layout_height="58.4dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_redis"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingEnd="11dp"
                android:hint="Имя пользователя"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/namber_phone"
                android:layout_width="match_parent"
                android:layout_height="58.4dp"
                app:layout_constraintTop_toBottomOf="@id/email_pochta"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_redis"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingEnd="11dp"
                android:hint="Номер телефона"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/namber_pasword"
                android:layout_width="match_parent"
                android:layout_height="58.4dp"
                app:layout_constraintTop_toBottomOf="@id/namber_phone"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_redis"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:paddingEnd="11dp"
                android:hint="Пароль"
                app:layout_constraintStart_toStartOf="parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/voite"
                android:layout_width="337dp"
                android:layout_height="58.47dp"
                app:layout_constraintTop_toBottomOf="@id/namber_pasword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                android:text="Войти"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/no_accoynt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уже есть аккаунт?"
                android:layout_marginTop="16.59dp"
                android:layout_marginStart="85dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/voite"/>

            <TextView
                android:id="@+id/new_acoynt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Войдите!"
                android:layout_marginTop="16.59dp"
                android:layout_marginEnd="110dp"
                android:textColor="#0057FF"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/voite"/>

            <View
                android:id="@+id/line_one"
                android:layout_width="131dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/no_accoynt"/>

            <View
                android:id="@+id/line_two"
                android:layout_width="131dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/no_accoynt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/line_one"
                android:text="ИЛИ"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@id/line_two"
                app:layout_constraintTop_toBottomOf="@id/no_accoynt"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_one">
            <ImageView
                android:id="@+id/google"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/google"
                android:layout_marginTop="20dp"
               />


            <ImageView
                android:id="@+id/facebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fecebok"
                android:layout_marginTop="20dp"
                android:layout_marginStart="45dp"
                app:layout_constraintStart_toEndOf="@id/google"
                app:layout_constraintTop_toBottomOf="@id/line_one"/>


            <ImageView
                android:id="@+id/twiter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/twiter"
                android:layout_marginTop="20dp"
                android:layout_marginStart="45dp"
                app:layout_constraintStart_toEndOf="@id/facebook"
                app:layout_constraintTop_toBottomOf="@id/line_one"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>